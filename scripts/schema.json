{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Quality Spec",
  "description": "A simple spec that describes data quality errors common to tabular data files.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "errors": {
      "type": "object",
      "properties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "context": {
            "type": "string"
          },
          "weight": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "context",
          "weight",
          "description"
        ]
      }
    }
  },
  "required": [ "version", "errors" ]
}
