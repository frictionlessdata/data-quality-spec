{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Quality Spec",
  "description": "A simple spec that describes data quality errors common to tabular data files.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "errors": {
      "type": "array",
      "items": {
        "properties": {
          "code": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "context": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "required": [
        "code",
        "type",
        "context",
        "description"
      ]
    }
  },
  "required": [ "version", "errors" ]
}
